<%- include('../../../partials/hade.ejs') %>


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../../partials/sidebar.ejs') %>
            </div>

            <div class="col-md-10 mb-5">
                <div class=" card card-body  mx-5">
                    <h5>Lists Of My Posts</h5>
                    <div class="row">
                        <% if(posts.length===0){ %>
                            <div class="text-center text-muted">
                                <p>There is no posts available right now</p>
                                <a href="/posts/create" class="btn btn-primary">Create Your Post</a>
                            </div>
                            <% }else{ %>

                                <% for(let post of posts.reverse()){ %>
                                    <div class="card col-sm-3 m-3">

                                        <% if(post.thumbail){ %>
                                            <img class="card-img-top mt-3" src="<%= post.thumbail  %> " alt="<%= post.title %> ">
                                            <% } %>

                                                <div class="card-body">
                                                    <a href="/posts/edit/<%= post._id %> " style="color:#222">
                                                        <h5>
                                                            <%= post.title %>
                                                        </h5>
                                                    </a>
                                                </div>
                                    </div>
                                    <% } %>

                                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <%- include('../../../partials/footer.ejs') %>
        </script>
        </body>

        </html>