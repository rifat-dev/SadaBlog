<%- include('../../partials/hade.ejs') %>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">

                <div class="card card-body">
                    <section>
                        <h3>
                            <%= post.title %>
                        </h3>
                        <div class="d-flex">
                            <small>
                               <%= moment(post.createdAt) %> ,
                               Posted By <a href="/author/<%= post.author._id %> ">
                                <%= post.author.username %>
                            </a> ,
                                <%= post.readTime %> 
                           </small>
                            <% if(user){ %>
                                <small class="ml-auto bookmark" style="font-size:20px" data-post="<%= post._id  %> ">
                               <% if(bookmarks.includes(post._id)){ %>
                                  <i class="fas fa-bookmark" ></i>
                               <% } else { %>  
                                <i class="far fa-bookmark" ></i>
                               <% } %> 
                            </small>
                                <% } %>
                        </div>
                        <% if(post.thumbail){ %>
                            <img class="img-fluid mb-2" src="<%= post.thumbail %> " alt="<%= post.title %> ">
                            <% } %>
                                <section>
                                    <%- post.body %>
                                </section>

                                <section class="my-5">
                                    <% if(!user){ %>
                                        <button class="btn btn-success btn-sm" disabled>
                                              Like ( <%= post.likes.length %> )
                                          </button>
                                        <button class="btn btn-danger btn-sm" disabled>
                                            DisLikes (<%= post.dislike.length %> )
                                        </button>
                                        <p class="text-center text-muted mt-5">
                                            To Like And Comment <a href="/auth/login">Login</a>
                                        </p>
                                        <% } else { %>
                                            <button class="btn btn-success btn-sm" id="likeBtn" data-post="<%= post._id %> ">
                                                <%= post.likes.includes(user._id) ? 'Liked' : 'Like' %> (<%= post.likes.length %> )
                                            </button>
                                            <button class="btn btn-danger btn-sm" id="dislikeBtn" data-post="<%= post._id %> ">
                                                <%= post.dislike.includes(user._id) ? 'DisLiked' : 'DisLike' %> (<%= post.dislike.length %> )
                                            </button>
                                            <div class="mt-5">
                                                <label for="comment">Leave a comment</label>
                                                <input type="text" class="form-control" id="comment" placeholder="Press Enter To Submit" data-post="<%= post._id %> ">
                                            </div>
                                            <div class="mt-5" id="comment-holder">
                                                <% if(post.comments.length === 0) { %>
                                                    <p class="text-center text-muted">There is No Comment</p>
                                                    <% } else { %>
                                                        <% for(let comment of post.comments.reverse()) { %>

                                                            <div class="media border my-2 p-3">
                                                                <img src="<%= comment.user.profilePics %> " class="rounded-circle mx-3 my-3" style="width:40px">
                                                                <div class="media-body my-3">
                                                                    <p>
                                                                        <%= comment.body %>
                                                                    </p>
                                                                    <div class="replies mt-2">
                                                                        <% if(comment.replies.length > 0 ) { %>
                                                                            <% for(let reply of comment.replies){ %>
                                                                                <div class="media mt-1">
                                                                                    <img src="<%= reply.user.profilePics %> " class="align-self-center rounded-circle mx-3 my-3" style="width:40px">
                                                                                    <div class="media-body mt-3">
                                                                                        <p>
                                                                                            <%= reply.body %>
                                                                                        </p>
                                                                                    </div>
                                                                                </div>
                                                                                <% } %>

                                                                                    <% } %>

                                                                    </div>
                                                                    <div class="my-3">
                                                                        <input data-comment="<%= comment._id %> " name="reply" type="text" class="form-control" placeholder="Press Enter">
                                                                    </div>
                                                                </div>

                                                            </div>

                                                            <% } %>
                                                                <% } %>
                                            </div>
                                            <% } %>
                                </section>
                    </section>
                </div>

            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>
        <script src="/scripts/like-coment-bookmarks.js"></script>
        <!-- <script src="/scripts/bookmarks.js"></script>
        <script src="/scripts/likeDislike.js"></script>
        <script src="/scripts/comment.js"></script> -->
        </body>

        </html>